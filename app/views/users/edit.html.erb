<h1 class="text-center mb-3 mt-4"> Edit User</h1>

<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-10">

      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true, method: :patch) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light mb-3" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg w-25" %>
        </div>

      <% end %>
    </div>
    <div class="mb-3 text-center mt-4 border border-2 w-25 border-info">
      <%= link_to '[ Cancel and return to listing ]', users_path, class: "text-info" %>
    </div>
  </div>
</div>

