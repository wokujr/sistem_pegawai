<h1 class="mb-4 d-flex align-items-center justify-content-center"> <%= @user.username %>'s profile </h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">

          <%#= link_to @user.username, karyawan_path(@user), class: "fs-3" %>
          <% if @user %>
            <h5> <%= @user.username %> </h5>
          <% else %>
            Belum Terdaftar
          <% end %>

          <%= profile_img @user, size: 200 %>
          <% if logged_in? && current_user || admin %>
            <div class="card-body">
              <div class="container text-start">
                <div class="row">
                  <h2 class="text-center mb-4">Karyawan detail:</h2>
                  <div class="col">
                    <% if @karyawan %>
                      <p><strong>Name:</strong> <%= @karyawan.name %></p>
                      <p><strong>Age:</strong> <%= @karyawan.age %></p>
                      <p><strong>Address:</strong> <%= @karyawan.address %></p>
                      </div>
                      <div class="col d-flex ajustify-content-center">
                        <p><strong>Position:</strong> <%= @karyawan.position.title %></p>
                      </div>
                    <% else %>
                      <h3 class="mt-2 text-center"> Belum ada data </h3>
                    <% end %>
                    </div>
              </div>
            </div>
            </div>
          <% end %>
          </div>
    </div>
  </div>

  <% if current_user %>
    <div class="mb-4 text-center ">
      <ul class="">
        <%= link_to "Edit user", edit_user_path, class: "btn btn-outline-primary btn-lg w-25" %>
      </ul>
      <ul>
        <% if current_user.admin? %>
          <%= link_to "Tambahkan Data", new_karyawan_path, class: "btn btn-primary" %>
        <% end %>
      </ul>
    </div>
  <% end %>

</div>

