<div class="container">
  <h1> Forgot your password </h1>
  <%= form_with url: password_reset_path, class: "shadow p-3 mb-3 bg-info rounded" do |form| %>
    <div class="form-group row mb-3 pt-2">
      <%= form.label :email, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
        <div class="mb-3 mt-4">
          <%= form.submit "Reset Password", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

