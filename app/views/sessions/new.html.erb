<h1 class="text-center mb-3 mt-4"> Log In </h1>

<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-10">

      <%= form_with(scope: :session,url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light mb-3" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded mb-3", placeholder: "Enter your password" %>
            <%= link_to "Forgot your password?", password_reset_path, class: "mt-3 text-white"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "login", class: "btn btn-outline-light btn-lg w-25" %>
        </div>

      <% end %>
    </div>
    <div class="mb-3 text-center mt-4">
      <%= link_to '[ Cancel and return to listing ]', root_path, class: "text-info" %>
    </div>
  </div>
</div>