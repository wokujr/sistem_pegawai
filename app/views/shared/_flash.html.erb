<!-- notify message that available in entire site -->
<% if flash[:notice]%>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<!-- alert message that available in entire site -->
<% if flash[:alert]%>
  <div class="alert alert-danger mt-4" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>